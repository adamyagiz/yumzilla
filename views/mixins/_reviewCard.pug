mixin reviewCard(review)
  .review__header
    .review__author
      img.avatar(src=review.author.gravatar, alt=review.author.name)
      p= review.author.name
    .review__stars(title=`Rated ${review.rating} out of 5 stars`)
      p= `★`.repeat(review.rating)
      p= `☆`.repeat(5 - review.rating)
    time.review__time(datetime=review.created)= h.moment(review.created).fromNow()
  .review__body
    p= review.text
